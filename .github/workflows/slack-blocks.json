{
    "blocks": [
        {
            "type": "header",
            "text": {
                "type": "plain_text",
                "text": ":flying_saucer: <%= it.workflow %>",
                "emoji": true
            }
        },
        {
            "type": "divider"
        },
        {
            "type": "context",
            "elements": [
                {
                    "type": "mrkdwn",
                    "text": "On _<%= it.gh.event %>_ => *<%= it.gh.source %>* by _@<%= it.gh.user %>_"
                }
            ]
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "<<%= it.gh.url %> | <%= it.gh.commitMessage %>>"
            }
        },
        {
            "type": "divider"
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "<%= it.status %>"
            }
        },
        <% it.phases.forEach(function(step) { %>
        {
            "type": "context",
            "elements": [
                {
                    "type": "mrkdwn",
                    "text": "<%= step.indicator %> <%= step.name %>"
                }
            ]
        },
        <% }) %>
        {
            "type": "divider"
        },
        {
            "type": "context",
            "elements": [
                {
                    "type": "mrkdwn",
                    "text": "<http://github.com | <%= it.params.GHL %>>"
                },
                {
                    "type": "mrkdwn",
                    "text": "<http://google.com | <%= it.params.GGL %>>"
                },
                {
                    "type": "mrkdwn",
                    "text": "<http://apple.com | <%= it.params.APL %>>"
                },
                {
                    "type": "mrkdwn",
                    "text": "<http://microsoft.com | <%= it.params.MSL %>>"
                }
            ]
        }
    ]
}